# Nuxt Public Environment Variables (exposed to client)

# Unsplash Access Key (public - OK at expose i browser)
NUXT_PUBLIC_UNSPLASH_ACCESS_KEY=

# OAuth Settings
NUXT_PUBLIC_UNSPLASH_OAUTH_ENABLED=false
NUXT_PUBLIC_UNSPLASH_REDIRECT_URI=http://localhost:3000/auth/callback

# Dummy Mode (true = mock data, false = real API)
NUXT_PUBLIC_APP_DUMMY_MODE=true

# Server-only (NEVER expose to client)
# NUXT_UNSPLASH_SECRET_KEY=your_secret_key_here
